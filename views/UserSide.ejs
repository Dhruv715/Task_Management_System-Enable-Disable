<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Side Dashboard</title>
    <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            text-align: center;
        }
        .userbox{
            margin: 10vh auto;
            width: 50vh;
            background-color: black;
            text-align: center;
            padding: 10px 20px;
            color: white;
        }
        .userbox input{
            padding: 10px 20px;
            margin: 10px 0px;
        }
        table{
            margin: 10px auto;
            width: 70vw;
            background-color: gray;
            padding: 10px;
            border-collapse: collapse;
        }
        th,td{
            padding: 10px 20px;
            border: 2px solid white;
        }
        td a{
            padding: 10px 20px;
            background-color: black;
            margin: 10px;
            color: white;
            text-decoration: none;
        }

    </style>
</head>
<body>
    <!-- <h1>User Dash Welcome!!</h1> -->
    <a href="/users" style="color: rgb(252, 0, 0);">Logout</a>
    <div class="userbox">
        <h1>Add Task</h1>

    <form method="post">
        <div>
            <label for="task">Task Details</label>
            <input type="text" name="task" placeholder="Enter Task Here..">
        </div>
        <div>
            <input type="submit" value="Add Task">
        </div>
    </form>
    </div>

    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Task</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% result.forEach(function(data){ %>
            <tr>
                <td><%= data.tid %></td>
                <td><%= data.taskname %></td>
                <td><%= data.mode %></td>
                <td>
                    <a href="/enablefun/<%= data.tid %>">Enable</a>
                    <a href="/disablefun/<%= data.tid %>">Disable</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>